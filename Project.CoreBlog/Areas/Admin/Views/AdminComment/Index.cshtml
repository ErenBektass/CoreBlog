@using Project.ENTITIES.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<html>

<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Yorumlar</h5>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Kullanıcı</th>
                                    <th>Başlık</th>
                                    <th>Blog</th>
                                    <th>Puan</th>
                                    <th>Tarih</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.CommentID</th>
                                        <td>@item.UserName</td>
                                        <td>@item.Title</td>
                                        <td>@item.Blog.Title</td>
                                        @if (item.BlogScore <= 3)
                                        {
                                            <td class="text-danger"> <i class="fa fa-star-o"></i>@item.BlogScore</td>
                                        }
                                        else if (item.BlogScore >= 4 && item.BlogScore <= 6)
                                        {
                                            <td class="text-warning"> <i class="fa fa-star"></i>@item.BlogScore</td>
                                        }
                                        else if (item.BlogScore >= 7 && item.BlogScore <= 8)
                                        {
                                            <td class="text-primary"> <i class="fa fa-star"></i>@item.BlogScore</td>
                                        }
                                        else
                                        {
                                            <td class="text-navy"> <i class="fa fa-star"></i>@item.BlogScore</td>
                                        }
                                        <td>@(((DateTime)item.Blog.CreateDate).ToString("dd-MMM-yyyy"))</td>
                                        <td><a href="#" class="btn btn-danger">Sil</a></td>
                                        <td><a href="#" class="btn btn-warning">Gücelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

